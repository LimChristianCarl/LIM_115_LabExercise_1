<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christiancarl.lim_labexercise_1.FirstActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Quiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="49dp"
        android:text="Quiz 1:"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Quiz2"
        android:layout_alignStart="@+id/Quiz2"
        android:layout_marginTop="45dp"/>

    <TextView
        android:id="@+id/Quiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="116dp"
        android:text="Quiz 2:"
        android:textSize="25dp"
        android:layout_below="@+id/Quiz1_Fld"
        android:layout_alignLeft="@+id/Seatworks"
        android:layout_alignStart="@+id/Seatworks"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/Seatworks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_x="21dp"
        android:layout_y="186dp"
        android:text="Seatworks: "
        android:textSize="25dp"
        android:layout_above="@+id/LabExer"
        android:layout_alignLeft="@+id/LabExer"
        android:layout_alignStart="@+id/LabExer" />

    <TextView
        android:id="@+id/LabExer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MajorExam"
        android:layout_alignStart="@+id/MajorExam"
        android:layout_centerVertical="true"
        android:layout_x="22dp"
        android:layout_y="262dp"
        android:text="Lab Exercises: "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/MajorExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_x="24dp"
        android:layout_y="332dp"
        android:text="Major Exam: "
        android:textSize="25dp"
        android:layout_below="@+id/LabExer_Fld"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/Quiz1_Fld"
        android:layout_alignBaseline="@+id/Quiz1"
        android:layout_alignBottom="@+id/Quiz1"
        android:layout_alignLeft="@+id/Quiz2_Fld"
        android:layout_alignStart="@+id/Quiz2_Fld"
        android:text="0"
        android:singleLine="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/Quiz2_Fld"
        android:layout_alignBaseline="@+id/Quiz2"
        android:layout_alignBottom="@+id/Quiz2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:singleLine="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/Seatworks_Fld"
        android:layout_alignBaseline="@+id/Seatworks"
        android:layout_alignBottom="@+id/Seatworks"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:singleLine="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/LabExer_Fld"
        android:layout_alignBaseline="@+id/LabExer"
        android:layout_alignBottom="@+id/LabExer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:singleLine="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/MajorExam_Fld"
        android:layout_alignBaseline="@+id/MajorExam"
        android:layout_alignBottom="@+id/MajorExam"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="COMPUTE"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/MajorExam_Fld"
        android:layout_toRightOf="@+id/Seatworks"
        android:layout_toEndOf="@+id/Seatworks"
        android:onClick="Compute"/>
</RelativeLayout>
